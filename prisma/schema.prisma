// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("categories")
}

model Trademark {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("trademarks")
}

model Product {
  id           Int       @id @default(autoincrement())
  category     Category  @relation(fields:[category_id], references:[id])
  category_id  Int
  trademark    Trademark @relation(fields:[trademark_id], references:[id])
  trademark_id Int
  name         String
  images       String
  line         String?
  components   String?
  size         String?
  description  String?
  extra_props  Json
  quantity     Int
  price        Decimal @db.Decimal(6,2)

  @@map("products")
}